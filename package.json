{
	"name": "validate-npm-package-name-cli",
	"version": "2.1.0",
	"description": "CLI for npmjs.com/validate-npm-package-name - give me a string and I'll tell you if it's a valid npm package name",
	"bin": "./bin.mjs",
	"main": false,
	"exports": {
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"lint": "eslint .",
		"postlint": "tsc",
		"pretest": "npm run lint",
		"tests-only": "c8 tape 'test/**/*.mjs'",
		"test": "npm run tests-only",
		"posttest": "npx npm@'>= 10.2' audit --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/validate-npm-package-name-cli.git"
	},
	"keywords": [
		"npm",
		"package",
		"name",
		"names",
		"valid",
		"validate",
		"validation"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/validate-npm-package-name-cli/issues"
	},
	"homepage": "https://github.com/ljharb/validate-npm-package-name-cli#readme",
	"dependencies": {
		"pargs": "^1.2.1",
		"validate-npm-package-name": "^7.0.1"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^22.1.3",
		"@ljharb/tsconfig": "^0.3.2",
		"@types/is-core-module": "^2.2.2",
		"@types/node": "^22.18.13",
		"@types/tape": "^5.8.1",
		"@types/validate-npm-package-name": "^4.0.2",
		"auto-changelog": "^2.5.0",
		"c8": "^10.1.3",
		"eslint": "^9.39.2",
		"in-publish": "^2.0.1",
		"is-core-module": "^2.16.1",
		"npmignore": "^0.3.5",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.9.0",
		"typescript": "next",
		"undici-types": "^7.16.0"
	},
	"engines": {
		"node": "^22.20 || ^24.10 || >= 25"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows"
		]
	}
}
